      "source": [
        "import numpy as np"
      ]
    },
    {
      "cell_type": "code",
      "source": [
        "n_flips = 10000\n",
        "flips = np.random.binomial(1, 0.5, n_flips)\n",
        "heads = np.sum(flips)\n",
        "prob_heads = heads / n_flips\n",
        "print(f\"Estimated P(heads) from {n_flips} flips: {prob_heads:.4f}\")"
      ],
